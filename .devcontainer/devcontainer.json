{
  ".devcontainer/devcontainer.json": {
    "name": "Symfony DevContainer",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace/auth-methods",
    "extensions": [
      "ms-vscode.vscode-node-azure-pack",
      "ms-azuretools.vscode-docker",
      "xdebug.php-debug"
    ],
    "postCreateCommand": "bash /workspace/auth-methods/.devcontainer/install-packages.sh",
    "portsAttributes": {
      "8000": {
        "label": "Symfony Server",
        "onAutoForward": "openBrowser"
      }
    }
  }
}
